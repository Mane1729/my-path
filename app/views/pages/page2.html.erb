
<%= stylesheet_link_tag 'application' %>

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
    
  <link href="/MyProject/Content/fontawesome-free-5.10.1-web/css/all.min.css" rel="stylesheet">

  <title>MyPath</title> 

  <link rel="stylesheet" type="text/css" href="my-path/app/assets/stylesheets/application.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="shortcut icon" type="image/x-icon" href="img/img1.png"/> <!-- website logo in tab -->

</head>
<body>




  <div class="module">
    <header>
      <h1>MyPath</h1> <!-- Name before button -->
      <button type="button" class="btn btn-danger btn-lg">Try for free !</button> <!-- Button link -->
    </header>
  </div>


  <div class="dis" id="overview">
    <h1 class="font-cond-b fg-text-d lts-md fs-300 fs-300-xs no-mg" contenteditable="false" id="termsofuse">MyPath OVERVIEW</h1><br> <!-- Name +  OVERVIEW -->
    <p class="fs-5">MyPath is an AI-powered career guidance application that helps users make informed career choices.</p> <!--  MyPath overview -->
  </div>  

    <div class="testimonials">
      <div class="inner">
        <h1>Who are we</h1>
        <div class="border"></div>
        <div class="row">


        <h1>Questions</h1>
        <ul id="survey-questions"></ul>
        
        <script>
        function addQuestionToList(question, listElement, callback) {
          const questionLI = document.createElement('li');
          questionLI.innerHTML = question;
          listElement.appendChild(questionLI);
          callback();
        }
        
        fetch("<%= asset_path('enums.json') %>")
          .then(response => response.json())
          .then(data => {
            const surveyQuestionsList = document.getElementById("survey-questions");
            
            // Add the first question to the list and call the function
            addQuestionToList(data.questions[0], surveyQuestionsList, function() {
              // Call your function here
            });
        
            // Add the second question to the list and call the function
            addQuestionToList(data.questions[1], surveyQuestionsList, function() {
              // Call your function here
            });
        
            // Add the third question to the list and call the function
            addQuestionToList(data.questions[2], surveyQuestionsList, function() {
              // Call your function here
            });
        
            // Add the fourth question to the list and call the function
            addQuestionToList(data.questions[3], surveyQuestionsList, function() {
              // Call your function here
            });
        
            // Add the reading and writing skills question to the list
            const readingWritingSkillsQuestion = document.createElement('li');
            readingWritingSkillsQuestion.innerHTML = data.questions[4];
            surveyQuestionsList.appendChild(readingWritingSkillsQuestion);
        
            // Add the options for the reading and writing skills question
            const readingWritingSkillsList = document.createElement('ul');
            const readingWritingSkills = data.reading_writing_skills;
            for (let i = 0; i < readingWritingSkills.length; i++) {
              const skillLI = document.createElement('li');
              skillLI.innerHTML = readingWritingSkills[i];
              readingWritingSkillsList.appendChild(skillLI);
            }
            readingWritingSkillsQuestion.appendChild(readingWritingSkillsList);
        
            // Add the fifth question to the list and call the function
            addQuestionToList(data.questions[5], surveyQuestionsList, function() {
              // Call your function here
            });
        
            // Add the options for the memory capabilities question
            const memoryCapabilitiesList = document.createElement('ul');
            const memoryCapabilities = data.memory_capabilities;
            for (let i = 0; i < memoryCapabilities.length; i++) {
              const capabilityLI = document.createElement('li');
              capabilityLI.innerHTML = memoryCapabilities[i];
              memoryCapabilitiesList.appendChild(capabilityLI);
            }
            surveyQuestionsList.appendChild(memoryCapabilitiesList);
          });
        </script>
        




        </div>
      </div>
    </div>


    <div class="contact-form-wrapper d-flex justify-content-center" style="background-color:orange !important;">
      <form action="#" class="contact-form">
      <h5 class="title">Contact us</h5>
      <div>
        <input type="text" class="form-control rounded border-white mb-3 form-input" id="name" placeholder="Name" required>
      </div>
      <div>
        <input type="email" class="form-control rounded border-white mb-3 form-input" placeholder="Email" required>
      </div>
      <div>
        <textarea id="message" class="form-control rounded border-white mb-3 form-text-area" rows="5" cols="30" placeholder="Message" required></textarea>
      </div>
      <div class="submit-button-wrapper">
        <input type="submit" value="Send">
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>